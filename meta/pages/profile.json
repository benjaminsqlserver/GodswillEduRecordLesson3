{
  "access": [
    "Authenticated"
  ],
  "components": [
    {
      "components": [
        {
          "name": "pageTitle",
          "size": "H1",
          "text": "Profile",
          "type": "heading"
        },
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "components": [
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "OldPassword",
                              "style": {
                                "width": "100%"
                              },
                              "text": "Old Password",
                              "type": "label"
                            }
                          ],
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "name": "OldPassword",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "type": "password"
                            },
                            {
                              "component": "OldPassword",
                              "name": "OldPasswordRequiredValidator",
                              "style": {
                                "position": "absolute"
                              },
                              "text": "Password is required",
                              "type": "required-validator"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "NewPassword",
                              "style": {
                                "width": "100%"
                              },
                              "text": "New Password",
                              "type": "label"
                            }
                          ],
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "name": "NewPassword",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "type": "password"
                            },
                            {
                              "component": "NewPassword",
                              "name": "NewPasswordRequiredValidator",
                              "style": {
                                "position": "absolute"
                              },
                              "text": "Password is required",
                              "type": "required-validator"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "ConfirmPassword",
                              "style": {
                                "width": "100%"
                              },
                              "text": "Confirm password",
                              "type": "label"
                            }
                          ],
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "name": "ConfirmPassword",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "type": "password"
                            },
                            {
                              "component": "ConfirmPassword",
                              "name": "ConfirmPasswordRequiredValidator",
                              "style": {
                                "position": "absolute"
                              },
                              "text": "ConfirmPassword is required",
                              "type": "required-validator"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "buttonStyle": "primary",
                              "buttonType": "submit",
                              "icon": "save",
                              "text": "Change password",
                              "type": "button"
                            },
                            {
                              "buttonStyle": "light",
                              "events": {
                                "click": [
                                  {
                                    "type": "back"
                                  }
                                ]
                              },
                              "text": "Cancel",
                              "type": "button"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "type": "row"
                    }
                  ],
                  "name": "form0",
                  "type": "template-form",
                  "method": "post",
                  "action": "account/changepassword",
                  "itemType": "ApplicationUser",
                  "data": "@(user)",
                  "visible": "${user != null}"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "Security.getUserById",
        "condition": "Security.User != null",
        "parameters": [
          {
            "name": "Id",
            "value": "${Security.User.Id}"
          }
        ],
        "then": [
          {
            "name": "user",
            "type": "set",
            "value": "${result}",
            "valueType": "ApplicationUser"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "Main",
  "name": "Profile"
}