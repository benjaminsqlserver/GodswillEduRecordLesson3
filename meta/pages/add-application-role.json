{
  "access": [
    "Authenticated"
  ],
  "components": [
    {
      "components": [
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "components": [
                    {
                      "components": [
                        {
                          "class": "col-md-3",
                          "components": [
                            {
                              "component": "Name",
                              "style": {
                                "width": "100%"
                              },
                              "text": "Name",
                              "type": "label"
                            }
                          ],
                          "type": "col"
                        },
                        {
                          "class": "col-md-9",
                          "components": [
                            {
                              "name": "Name",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${role.Name}",
                              "type": "textbox"
                            },
                            {
                              "component": "Name",
                              "name": "NameRequiredValidator",
                              "style": {
                                "position": "absolute"
                              },
                              "text": "Name is required",
                              "type": "required-validator"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "type": "row"
                    },
                    {
                      "components": [
                        {
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "buttonStyle": "primary",
                              "buttonType": "submit",
                              "icon": "save",
                              "text": "Save",
                              "type": "button"
                            },
                            {
                              "buttonStyle": "light",
                              "events": {
                                "click": [
                                  {
                                    "type": "close-popup"
                                  }
                                ]
                              },
                              "text": "Cancel",
                              "type": "button"
                            }
                          ],
                          "type": "col"
                        }
                      ],
                      "type": "row"
                    }
                  ],
                  "events": {
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "${result.Message}",
                            "severity": "error",
                            "summary": "Cannot create role",
                            "type": "notify"
                          }
                        ],
                        "name": "Security.createRole",
                        "parameters": [
                          {
                            "name": "Role",
                            "value": "${event}"
                          }
                        ],
                        "then": [
                          {
                            "path": "application-roles",
                            "type": "navigate"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "name": "form0",
                  "type": "template-form",
                  "itemType": "IdentityRole",
                  "data": "${role}",
                  "visible": "${role != null}"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "role",
        "type": "set",
        "value": "new IdentityRole()",
        "valueType": "IdentityRole"
      }
    ]
  },
  "layout": "Main",
  "name": "Add Application Role"
}